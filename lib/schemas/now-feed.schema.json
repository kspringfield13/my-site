{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kylespringfield.dev/schemas/now-feed.schema.json",
  "type": "object",
  "required": ["expireDays", "entries"],
  "properties": {
    "expireDays": { "type": "integer", "minimum": 1 },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "date", "category", "title", "tried", "outcome", "nextStep"],
        "properties": {
          "id": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "category": { "enum": ["models", "tools", "ideas"] },
          "title": { "type": "string" },
          "tried": { "type": "string" },
          "outcome": { "type": "string" },
          "nextStep": { "type": "string" },
          "links": {
            "type": "array",
            "items": { "type": "string", "format": "uri" }
          }
        }
      }
    }
  }
}
